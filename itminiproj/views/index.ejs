<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>
    <div class="main_wrapper">
        <div class="blogs content">
            <h2>All Patients</h2>
            <form action="/patients/searchresults" method="post">
                <input type="text" name="searchbar" id="searchbar" placeholder="Search Patients here"><button><i class="material-icons">search</i></button>
            </form>
            <% if(blogs.length>0){ %>
            <% blogs.forEach(blog => { %>
            <a class='single' href='/patients/<%= blog._id %>'>
                <h3 class='title'><%= blog.title %></h3>
                <p class='snippet'>Hospital Name : <%= blog.snippet%></p>
            </a>
            <% }) %>
            <% } else { %>
            <p>No patients to show</p>
            <% } %>
        </div>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>


</html>